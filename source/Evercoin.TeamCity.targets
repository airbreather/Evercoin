<Project xmlns="http://schemas.microsoft.com/developer/msbuild/2003">

    <UsingTask AssemblyFile="$(MSBuildProjectDirectory)\packages\xunit.runners.1.9.2\tools\xunit.runner.msbuild.dll"
               TaskName="Xunit.Runner.MSBuild.xunit" />

    <ItemGroup>
        <TestAssemblies Include="**/*.Tests.dll" />
    </ItemGroup>

    <Target Name="Test">
        <xunit Assemblies="@(TestAssemblies)"
               Html="$(MSBuildProjectDirectory)\output\TestResults.html" />
    </Target>

</Project>
